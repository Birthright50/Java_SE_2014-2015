<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>ru.kpfu.itis.peter_kozlovsky.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>ru.kpfu.itis.peter_kozlovsky.servlets.RegistrationServlet</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>ru.kpfu.itis.peter_kozlovsky.servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>template</servlet-name>
        <servlet-class>ru.kpfu.itis.peter_kozlovsky.servlets.TemplateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>template</servlet-name>
        <url-pattern>/news/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>ru.kpfu.itis.peter_kozlovsky.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>template</servlet-name>
        <url-pattern>/articles/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>template</servlet-name>
        <url-pattern>/videos/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>hpServlet</servlet-name>
        <servlet-class>ru.kpfu.itis.peter_kozlovsky.servlets.HPCalculatorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>hpServlet</servlet-name>
        <url-pattern>/calculator_hp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>customsServlet</servlet-name>
        <servlet-class>ru.kpfu.itis.peter_kozlovsky.servlets.CustomsCalculatorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>customsServlet</servlet-name>
        <url-pattern>/custom_calculator</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addtemplate</servlet-name>
        <servlet-class>ru.kpfu.itis.peter_kozlovsky.servlets.AddTemplateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addtemplate</servlet-name>
        <url-pattern>/add_template</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>catalog</servlet-name>
        <servlet-class>ru.kpfu.itis.peter_kozlovsky.servlets.CatalogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>catalog</servlet-name>
        <url-pattern>/catalog/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>buy</servlet-name>
        <servlet-class>ru.kpfu.itis.peter_kozlovsky.servlets.BuyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>buy</servlet-name>
        <url-pattern>/buy/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>add_ad</servlet-name>
        <servlet-class>ru.kpfu.itis.peter_kozlovsky.servlets.AddAdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add_ad</servlet-name>
        <url-pattern>/add_ad</url-pattern>
    </servlet-mapping>
</web-app>